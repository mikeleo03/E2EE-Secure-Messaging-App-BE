{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6", 
            "dom",
            "es2016"
        ],
        "typeRoots": ["./src/types"],
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "rootDir": "./src"
    },
    "include": [
        "**/*"
    ],
}