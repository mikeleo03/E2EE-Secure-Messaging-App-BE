{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "es2016", "es2020"],
    "typeRoots": ["./src/types"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": ["**/*"]
}
